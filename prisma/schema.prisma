// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

// Necessary for Next auth
model Account {
    id                String  @id @default(cuid())
    userId            String
    type              String
    provider          String
    providerAccountId String
    refresh_token     String? @db.Text
    access_token      String? @db.Text
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String? @db.Text
    session_state     String?
    user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@index([userId])
}

enum UserType {
    USER
    DELIVERY
    MANAGER
    ADMIN
}

model User {
    id              String     @id @default(cuid())
    name            String?
    email           String?    @unique
    emailVerified   DateTime?
    image           String?
    password        String?
    userType        UserType?
    accounts        Account[]
    sessions        Session[]
    deliveredOrders Delivery[] @relation("delivery")
    orderedOrders   Order[]    @relation("customer")
    managedOrders   Order[]    @relation("manager")

    @@index([email])
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

enum ItemCategory {
    MEAT_BOX
    RICE_BOWL
    SHAKE
}

model Item {
    id                String       @id @unique @default(uuid())
    name              String
    description       String
    price             Int
    category          ItemCategory
    orderedEncounters OrderItem[]
}

model OrderItem {
    id       String @id @unique @default(uuid())
    item     Item   @relation(fields: [itemId], references: [id])
    itemId   String
    quantity Int
    order    Order  @relation(fields: [orderId], references: [id])
    orderId  String

    @@index([orderId])
    @@index([itemId])
}

enum OrderStatus {
    PAYMENT_PENDING
    PAYMENT_FAILED
    PAYMENT_SUCCESS
    ORDER_ACCEPTED
    ORDER_REJECTED
    ORDER_CANCELLED
    DELIVERY_WAITING
    DELIVERY_PROCESSING
    DELIVERY_SUCCESSFUL
}

enum OrderType {
    DINE_IN
    TAKE_OUT
    DELIVERY
}

model Order {
    id                    String      @id @unique @default(uuid())
    customer              User        @relation(name: "customer", fields: [customerId], references: [id])
    customerId            String
    type                  OrderType
    price                 Int
    manager               User        @relation(name: "manager", fields: [managerId], references: [id])
    managerId             String
    timeCreated           DateTime    @default(now())
    timeStarted           DateTime
    estimatedDeliveryTime DateTime
    orderItems            OrderItem[]
    status                OrderStatus
    deliveries            Delivery[]

    @@index([customerId])
    @@index([managerId])
}

model Delivery {
    id               String @id @unique @default(uuid())
    order            Order  @relation(fields: [orderId], references: [id])
    orderId          String
    deliveryPerson   User   @relation(name: "delivery", fields: [deliveryPersonId], references: [id])
    deliveryPersonId String // need to add as fk
    deliveryStatus   String

    @@index([deliveryPersonId])
    @@index([orderId])
}
