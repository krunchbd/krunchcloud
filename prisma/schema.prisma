// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

// Necessary for Next auth
model Account {
    id                 String    @id @default(cuid())
    userId             String
    provider           String
    providerAccountId  String
    refreshToken       String?
    accessToken        String?
    accessTokenExpires DateTime?
    createdAt          DateTime  @default(now())

    user User @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
    @@index([userId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@index([userId])
}

model User {
    id            String    @id @default(cuid())
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    accounts      Account[]
    sessions      Session[]

    deliveredOrders Delivery[] @relation("delivery")
    orderedOrders   Order[]    @relation("customer")
    managedOrders   Order[]    @relation("manager")

    @@index([email])
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

model Item {
    id                String      @id @unique @default(uuid())
    name              String
    description       String
    price             Int
    category          String
    orderedEncounters OrderItem[]
}

model OrderItem {
    id String @id @unique @default(uuid())

    item     Item   @relation(fields: [itemId], references: [id])
    itemId   String
    quantity Int

    order   Order  @relation(fields: [orderId], references: [id])
    orderId String

    @@index([orderId])
    @@index([itemId])
}

enum OrderStatus {
    PAYMENT_PENDING
    PAYMENT_FAILED
    PAYMENT_SUCCESS
    ORDER_ACCEPTED
    ORDER_REJECTED
    ORDER_CANCELLED
    DELIVERY_WAITING
    DELIVERY_PROCESSING
    DELIVERY_SUCCESSFUL
}

model Order {
    id                    String      @id @unique @default(uuid())
    customer              User        @relation(name: "customer", fields: [userId], references: [id])
    userId                String
    type                  String
    price                 Int
    manager               User        @relation(name: "manager", fields: [managerId], references: [id])
    managerId             String
    timeCreated           DateTime    @default(now())
    timeStarted           DateTime
    estimatedDeliveryTime DateTime
    orderItems            OrderItem[]
    status                OrderStatus
    deliveries            Delivery[]

    @@index([userId])
    @@index([managerId])
}

model Delivery {
    id               String @id @unique @default(uuid())
    order            Order  @relation(fields: [orderId], references: [id])
    orderId          String
    deliveryPerson   User   @relation(name: "delivery", fields: [deliveryPersonId], references: [id])
    deliveryPersonId String // need to add as fk
    deliveryStatus   String

    @@index([deliveryPersonId])
    @@index([orderId])
}
